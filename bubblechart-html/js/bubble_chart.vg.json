{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Daily Consumption (Barrels) in Each Country",
    "data": {
    "url": "https://raw.githubusercontent.com/JayceJeff/3179A2/main/3179A2/data/Petrol%20Dataset%20June%2023%202022%20--%20Version%202.csv"
    },
    "mark": "circle",
    "encoding": {
    "x": {
    "field": "Country",
    "type": "nominal",
    "title": "Country"
    },
    "y": {
    "field": "Oil",
    "type": "quantitative",
    "axis": {"tickCount": 6},
    "scale": {"type": "log", "domain": [1, 10000000]}
    },
    "color": {
    "field": "Continent",
    "type": "nominal",
    "scale": {
        "domain": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
        ],
        "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#a6cee3",
            "#377eb8",
            "#a65628"
        ]
    }
    },
    "opacity": {"value": 0.6},
    "size": {
        "field": "GDP_Per_Capita",
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [1000, 5000, 10000, 20000, 60000],
            "range": [10, 50, 150, 200, 300, 400]
        },
        "legend": {"format": ".1s"}
    }
}
}