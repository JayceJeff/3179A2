{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Gas Price Around the World (23 June 2022)",
    "width": 1000,
    "height": 700,
    "background":"lightblue",
    "data": {
        "url": "https://raw.githubusercontent.com/JayceJeff/3179A2/main/3179A2/js/output%20.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JayceJeff/3179A2/main/3179A2/js/output%20.json",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "darkgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JayceJeff/3179A2/main/3179A2/js/output%20.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/JayceJeff/3179A2/main/bubblechart-html/data/World_Petrol_Population.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "Price Per Gallon (USD)"
                        ]
                    }
                }

            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Price Per Gallon (USD)",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Price Per Gallon (USD)",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}
